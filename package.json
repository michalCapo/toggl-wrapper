{
  "name": "toggl-wrapper",
  "version": "0.0.1",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-packager ./ --platform=win32",
    "build:lin": "electron-packager ./ --platform=linux",
    "build": "rm -fr toggl_wrapper-* && yarn build:win && yarn build:lin",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^3.0.0-beta.3",
    "electron-builder": "^20.24.5",
    "electron-packager": "^12.1.0"
  }
}